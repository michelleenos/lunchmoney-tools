{
    "include": ["src/**/*.ts"],
    "compilerOptions": {
        "target": "ES2020",
        "noImplicitAny": true,
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "rewriteRelativeImportExtensions": true,

        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,

        "declaration": true,
        "outDir": "./dist"
    }
}
